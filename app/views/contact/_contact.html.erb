<section id="contact">
	<div class="section_header">
	</div>
	<div class="contact_us">
		<h1 class="title">Contact</h1>
		<div class="contact_info">
			<ul>
				<li><%= image_tag("phone.png", class: "contact_icon") %> <a href="tel:267-679-6483">(267) 679-6483</a></li>
				</li><%= image_tag("email.png", class: "contact_icon") %> <a href="mailto:adam@treehelp.net">adam@treehelp.net</a></li>
				<li><%= link_to image_tag("facebook.png", class: "contact_icon"), "https://www.facebook.com/ATSTreeservices/?fref=ts" %> Like us!</li>
				<br><br>
				<li>215 Frontier Road</li>
				<li>Perkasie, PA</li>
				<li>United States</li>
				<li><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.7655828557704!2d-75.21548428444946!3d40.36972187937061!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c41c527bc5b92b%3A0xfccb7777a83c9f80!2s215+Frontier+Rd%2C+Perkasie%2C+PA+18944!5e0!3m2!1sen!2sus!4v1454887115425" width="95%" height="auto" frameborder="0" style="border:0" allowfullscreen></iframe></li>
			</ul>
		</div> 
		<div class="contact_form">
			<span class="call_to_action">Let's talk trees!</span>
			<h3>Email us today!</h3>
	        <form action="MAILTO:adam@treehelp.com" method="post" enctype="text/plain">
	        	 <div class="form_divider">
		      		<p>Please select the services you are interested in.</p>
		      		<ul class="checkbox">
						<li><input type="checkbox" name="Tree Pruning" value="Tree Pruning">Tree Pruning</li>
						<li><input type="checkbox" name="Tree Removal" value="Tree Removal">Tree Removal</li>
						<li><input type="checkbox" name="Emergency Tree Service" value="Emergency Tree Service">Emergency Tree Service</li>
						<li><input type="checkbox" name="Stump Grinding" value="Stump Grinding">Stump Grinding</li>
						<li><input type="checkbox" name="Firewood" value="Firewood">Firewood</li>
						<li><input type="checkbox" name="Difficult Removal" value="Difficult Removal">Difficult Removal</li>
						<li><input type="checkbox" name="Roof Patches" value="Roof Patches">Roof Patches</li>
						<li><input type="checkbox" name="Storm Clean-up" value="Storm Clean-up">Storm Clean-up</li>
					</ul>
	            </div>
	        	<div class="form_divider">
		            <input type="text" name="First Name" placeholder="First Name"><br>
		            <input type="text" name="Last Name" placeholder="Last Name"><br>
		            <input type="email" name="Email" placeholder="Email" placeholder="Email"><br>
		            <input type="textbox" name="Remarks" placeholder="Remarks" size="30"><br><br>
		        </div>
	            <div id="button">
	                <button class="btn btn-primary next" type="submit">Send</button>
	                <button class="btn btn-primary next" type="reset">Reset</button>
	            </div>
	        </form>
		</div>
	</div>
	<div class="section_header">
	</div>
</section>